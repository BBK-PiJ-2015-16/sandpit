println("Please enter the paper size you would like:");
String paper = readLine();
print("Width of paper is " + paperSize(paper) + ", width is " + paperSize(paper)*);

int paperSize(String paper) { //always returns width
	if (paper.equals("A0")) {
		return 841;
	}
	if (paper.equals("A1")) {
		return 594;
	}
	return paperSize(paper-2)/2;
}