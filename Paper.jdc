println("Please enter the paper size you would like:");
String paper = readLine();
print("Width of paper is " + paperSize(paper) + ", width is " + paperSize(paper)*1.414);

int paperSize(String paper) { //always returns width
	if (paper.equals("A0")) {
		return 841;
	}
	if (paper.equals("A1")) {
		return 594;
	}
	int paperNum = Integer.parseInt(paper.substring(1,2))-2;	
	paper = paper.substring(0,1) + paperNum;
	return paperSize(paper)/2;
}